<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- JAVA와 연결할 Mapper 파일 설정 -->
<mapper namespace="poly.persistance.mapper.ICommunityMapper">

	<!-- ======== 게시판작성 ======== -->
	<insert id = "insertCommunity" parameterType="ProjectsDTO"> 
		INSERT INTO COMMUNITY_INFO(z
			BOARD_TITLE,
			BOARD_WRITER,
			BOARD_CONTENTS
		) values(
			#{board_title},
			#{board_writer},
			#{board_contents}
		)
	</insert>
	
	<!-- ==========  게시판 조회  ============ -->
	<select id = "getBoardList" parameterType="ProjectsDTO" resultType="ProjectsDTO">
	SELECT BOARD_SEQ, BOARD_TITLE, BOARD_WRITER, BOARD_CONTENTS, BOARD_REGDATE FROM COMMUNITY_INFO
	</select>

	<!-- =========== 게시판 삭제 =========== -->
	<select id = "" parameterType="" resultType="">
	SELECT * FROM BOARD WHERE BOARD_SEQ = ();
	</select>


</mapper>